#include "stdafx.h"
#include <iostream>
#include "conio.h"
using namespace std;
void main()
{
	int opcion;
	float a,b,r;
	cout<<"ingrese el valor de:";
	cin>>a;
	cout<<"ingrese el valor de:";
	cin>>b;
	do{
		cout<<"    menu   \t";
		cout<<"1.- suma"<<endl;
		cout<<"2.-resta"<<endl;
		cout<<"3.-multiplicacion"<<endl;
		cout<<"4.-division"<<endl;
		cout<<"0.-salir del programa";
		cout<<"elija una opcion"<<endl;
		cin>>opcion;
		switch (opcion){
		case 1: r= a + b;
			    break;
		case 2: r= a - b;
			    break;
		case 3: r= a * b;
			    break;
		case 4: r= a / b;
			    break;
		case 0: cout<<"salir del programa";
			    break;
		default: cout<<"opcion invalida, elija otra opcion";

		}
		cout<<"el resultado es:"<<r<<endl;
		
		}while (opcion !=0);
		_getch();
	
}
